generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Patient {
  patientid    Int     @id @default(autoincrement())
  baseaddress  String
  weight       Int
  height       Float
  fatPercentage Float?
  age          Int
  name         String
  sex          String
  images       Image[]
  practitioner Practitioner? @relation(fields: [practitionerid], references: [practitionerid])
  practitionerid Int?
  ratings       Rating[]
}

model Image {
  imageid        Int     @id @default(autoincrement())
  beforeImageCid String
  afterImageCid  String?
  afterImageUploaded Boolean @default(false)
  description    String?
  analysis      String?
  patientid      Int
  patient        Patient @relation(fields: [patientid], references: [patientid])
}

model Practitioner {
  practitionerid Int     @id @default(autoincrement())
  baseaddress    String
  name           String
  patients       Patient[]
  ratings        Rating[]
}

model Rating {
  ratingid Int @id @default(autoincrement())
  Patient Patient @relation(fields: [patientid], references: [patientid])
  patientid Int
  rating Int
  Practitioner Practitioner @relation(fields: [practitionerid], references: [practitionerid])
  practitionerid Int
}
